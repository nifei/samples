<xlue>

<control class="GaussianBlurImage">
	<attr_def>
		<attr name="Sigma" type="float"/>
		<attr name="Radius" type="int" />
	</attr_def>
	<objtemplate>
		<children>
			<obj class="LayerObject">
				<attr>
					<left>0</left>
					<top>0</top>
					<width>256</width>
					<height>256</height>
					<clipsens>1</clipsens>
				</attr>
				<children>
					<obj class="ImageObject">
						<attr>
							<width>father.width</width>
							<height>father.height</height>
							<image>test</image>
						</attr>
					</obj>
<!-- 					<obj class="SeqImageObject">
						<attr>
							<width>father.width</width>
							<height>father.height</height>
							<gif>cat</gif>
							<loop>1</loop>
						</attr>
						<eventlist>
							<event name="OnInitControl">
								local arg = {...}
								local self = arg[1]
								self:Play()
							</event>
						</eventlist>
					</obj> -->
					<obj id="gaussianblur" class="GaussianBlurObject">
						<attr>
							<width>father.width</width>
							<height>father.height</height>
						</attr>
					</obj>
				</children>
			</obj>
		</children>
		<eventlist>
             <event name="OnInitControl">
				local arg = {...}
				local self = arg[1]
				local obj = self:GetControlObject("gaussianblur")
				local attr = self:GetAttribute();
				if attr.Sigma then obj:SetSigma(attr.Sigma) end
				if attr.Radius then obj:SetRadius(attr.Radius) end
			 </event>
        </eventlist>
	</objtemplate>
</control>

