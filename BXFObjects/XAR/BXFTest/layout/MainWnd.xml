<!--XML最好存储为UTF-8编码-->
<xlue>
<control class="GaussianUnit">
	<attr_def>
		<attr name="Type" type="string"/>
	</attr_def>
	<objtemplate>
		<children>
			<obj class="LayerObject">
				<attr>
					<left>0</left>
					<top>0</top>
					<width>1024</width>
					<height>50</height>
					<clipsens>1</clipsens>
				</attr>
				<children>
					<obj id="gaussian.text" class = "TextObject">
						<attr>
							<left>0</left>
							<top>0</top>
							<width>father.width</width>
							<height>father.height</height>
							<text>Gaussian Blur</text>
							<font>msg.font</font>
							<textcolor>system.white</textcolor>
						</attr>
					</obj> 
					<obj id="gaussian.fir.object" class="GaussianBlurObject">
						<attr>
							<left>0</left>
							<top>0</top>
							<width>father.width</width>
							<height>father.height</height>
							<gaussiantype>Default</gaussiantype>
						</attr>
						<eventlist>
							<event name="OnMouseWheel" file="MainWnd.xml.lua" func="OnMouseWheel" />
						</eventlist>
					</obj>  
				</children>
			</obj>
		</children>
	</objtemplate>
</control>

<objtreetemplate id="HelloBolt.Tree" class="ObjectTreeTemplate">
	<attr>
			<left>-200</left>
			<top>-200</top>
			<width>2000</width>
			<height>2000</height>
	</attr>
							
	<obj id="app.bkg" class="LayoutObject">
		<attr>
			<width>0</width>
			<height>0</height>
		</attr>
		<children>
			<obj id="caption" class="CaptionObject">
				<attr>
					<width>father.width</width>
					<height>father.height</height>
					<zorder>-1000</zorder>
				</attr>
			</obj>
			
			<obj class="ImageObject">
				<attr>
					<left>0</left>
					<top>0</top>
					<width>father.width</width>
					<height>father.height</height>
					<image>jellyfish</image>
				</attr>
				<children>
					<obj class="GaussianUnit">
						<attr>
							<left>0</left>
							<top>0</top>
							<width>1024</width>
							<height>50</height>
						</attr>
					</obj>
					<obj class="GaussianUnit">
						<attr>
							<left>0</left>
							<top>50</top>
							<width>1024</width>
							<height>50</height>
						</attr>
					</obj>
					<obj class="GaussianUnit">
						<attr>
							<left>0</left>
							<top>100</top>
							<width>1024</width>
							<height>50</height>
						</attr>
					</obj>
					<obj class="GaussianUnit">
						<attr>
							<left>0</left>
							<top>150</top>
							<width>1024</width>
							<height>50</height>
						</attr>
					</obj>
					<obj class="GaussianUnit">
						<attr>
							<left>0</left>
							<top>200</top>
							<width>1024</width>
							<height>50</height>
						</attr>
					</obj>
				</children>
			</obj>   
		</children>
	</obj>
</objtreetemplate>
	
<hostwndtemplate id="HelloBolt.Wnd" class="FrameHostWnd">
		<attr> 
			<!-- <mainwnd>1</mainwnd> -->
			<title>Bolt</title>
			<layered>1</layered>
			<left>200</left> 
			<top>100</top>
			<width>1024</width>
			<height>768</height>
			<topmost>0</topmost>
			<visible>1</visible>
			<enable>1</enable>
			<maxbox>0</maxbox>
			<minbox>0</minbox>
			<minwidth>100</minwidth>
			<minheight>72</minheight>
			<maxwidth>1000</maxwidth>
			<maxheight>720</maxheight>
			<appwindow>1</appwindow>
			<fps>30</fps>
		</attr>
		<eventlist>
			<event name="OnSize" file="MainWnd.xml.lua" func="OnSize"/>
			<event name="OnClose" file="MainWnd.xml.lua" func="OnClose"/>
		</eventlist>
</hostwndtemplate>
</xlue>